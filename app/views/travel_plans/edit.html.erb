<h1>Travel Plan Edit Page</h1>

<% if  @travelplan.is_international == false %>
	<h3>Type: <%= "Domestic Trip" %></h3>

<% elsif @travelplan.is_international == true %>
	<h3>Type: <%= "Interational" %></h3>
<% end %>
	<h3>Departure: <%= @travelplan.departure_city %> , <%= @travelplan.departure_country %></h3>
	<h3>Destination: <%= @travelplan.destination_city %> , <%= @travelplan.destination_country %></h3>
	<h3>Date: <%= @travelplan.start_date.to_date %> ~ <%= @travelplan.end_date.to_date %></h3>

	<h3> Travel Plan Details: </h3><br>
	<table>
		<caption></caption>
		<thead>
			<tr>
				<th>category</th>
				<th>notes</th>
				<th>estimated amt</th>
				<th>actual expense</th>
				<th>created</th>
				<th>updated</th>
				<th>upload receipt</th>
				<th>edit entry</th>
			</tr>
		</thead>
		<tbody>
		<% @entries.each do |entry| %>
			<tr>
				<td><input type="text" value="<%= Subcategory.find(entry.subcategory_id).subcategory_name %>"></input></td>
				<td><input type="text" value="<%= entry.notes %>"></input></td>
				<td><input type="text" value="<%= entry.estimated_amount %>"></input></td>
				<td><input type="text" value="<%= entry.actual_expense %>"></input></td>
				<td><input type="text" value="<%= entry.created_at.to_date %>"></input></td>
				<td><input type="text" value="<%= entry.updated_at.to_date %>"></input></td>
				<td> upload receipt</td>
				<td><button>edit</button></td>
			</tr>
		</tbody>
		<% end %>
	</table><br></br>	